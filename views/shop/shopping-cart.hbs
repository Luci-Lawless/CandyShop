{{#if products}}
  <div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
      <ul class="list-group">
        {{# each products }}
          <li class="list-group-item">
            <img src="{{this.item.imagePath}}" alt="candy" class="image-responsive img-shopping-cart">
            <span>{{this.qty}}</span>
            <strong>{{this.item.title}}</strong>
            <span class="label label-success">€ {{this.price}}</span>
            <div class="btn-group">
              <p><a href="/reduce/{{this.item._id}}" class="btn btn-primary btn-xs float-right" role="button">Remove 1</a></p>
              <p><a href="/remove/{{this.item._id}}" class="btn btn-primary btn-xs float-right" role="button">Remove All</a></p>
            </div>
          </li>
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
      <strong>Total: € {{totalPrice}} </strong>
    </div>
  </div>
  <hr />
  <div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
      <a href="/checkout" class="btn btn-primary" type="button">Checkout </a>
    </div>
  </div>
{{ else }}
  <div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3 empty-cart">
      <h2>Your cart is empty!</h2>
      <img src="http://res.cloudinary.com/di7m4tijz/image/upload/bo_0px_solid_rgb:000,c_scale,w_500/v1536067600/latest_tkrj4c.gif" />
    </div>
  </div>
{{/if}}
