{{#if products}}
  <div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3 wrap">
      <ul class="list-group">
        {{# each products }}
          <li class="list-group-item">
            <span><img src="{{this.item.imagePath}}" alt="candy" class="image-responsive img-shopping-cart"></span>
            <span class="cart-orders">{{this.qty}}</span>
            <span class="cart-orders"><strong>{{this.item.title}}</strong></span>
            <span class="label label-success cart-orders">€ {{this.price}}</span>
            <div class="btn-group">
              <p><a href="/reduce/{{this.item._id}}" class="btn btn-primary btn-xs float-right" role="button">Remove 1</a></p>
              <p><a href="/remove/{{this.item._id}}" class="btn btn-primary btn-xs float-right" role="button">Remove All</a></p>
            </div>
          </li>
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
      <span class="cart-orders"><p><i class="fas fa-angle-double-right"></i>Total: € {{totalPrice}} </p></span>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
      <a href="/checkout" class="btn btn-primary" role="button" style="width:200px;font-size:20px;">Checkout </a>
    </div>
  </div>
{{ else }}
  <div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3 empty-cart">
      <div class="box speech"><h2>Your cart is empty!</h2></div>
      <img src="http://res.cloudinary.com/di7m4tijz/image/upload/bo_0px_solid_rgb:000,c_scale,w_500/v1536067600/latest_tkrj4c.gif" />
    </div>
  </div>
{{/if}}
