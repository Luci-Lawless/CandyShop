<div class="row">
  <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
    <div id="success" class="alert alert-success" {{#if noMessages}}hidden{{/if}}>
      {{successMsg}}
    </div>
  </div>
</div>
{{#each products }}
  <div class="row">
    {{#each this}}
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <img src="{{this.imagePath}}" alt="candy" class="image-responsive">
          <div class="caption">
            <h3>{{this.title}}</h3>
            <p class="details">{{this.description}}</p>
            <div>
              <div class="price float-left">â‚¬ {{this.price}}</div>
              <p><a href="/add-to-cart/{{this.id}}" class="btn btn-primary float-right" role="button">Add to Cart</a></p>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
{{/each}}
